[include]
  path = .dotfiles/secret/.gitconfig

[core]
  excludesfile = ~/.gitignore
  editor       = /usr/bin/vim

[alias]
  co    = checkout
  cl    = clone --recursive
  st    = status
  subup = submodule update --recursive --init
  puff  = pull --ff --ff-only
  hub   = !hub
  lg    = log --oneline --decorate --graph --all
  fs    = flow feature start
  ff    = flow feature finish

[color]
  branch = auto
  diff   = auto
  status = auto
  ui     = true

[push]
  default = current
